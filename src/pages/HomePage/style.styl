#hero{
    background url("../../assets/nature.png") no-repeat
    background-size 100% 500px
    height 500px
    font-size 2vw
    font-weight 600
    margin-top 45px
    .content{
        width 940px
        padding 50px 0
        margin 0 auto
        .text{
            color #ffffff
            margin-top 50px
        }
    }
}
#body{
    .case-display{
        width 940px
        margin 0 auto
        margin-bottom 60px
        .label{
            text-align center
            font-size 24px
            font-weight 400
            margin-top 20px
        }
        .card-content{
            display flex
            .single-card{
                width 33.3%
                float left
                text-align center
                margin 0 10px
                img{
                    width 100%
                }
            }
        }
    }
}

@media only screen and (max-width: 768px) {
    body{
        min-width 320px
    }
    #hero{
        text-align center
        background-size 100% 200px
        height 200px
        .content{
            width auto
            padding 20px
        }
    }
    #body{
        .case-display{
            width auto
            padding 20px 70px
            margin-bottom 0
            .card-content{
                flex-direction column
                .single-card{
                    width auto
                    float none
                }
            }
        }
    }
}

@media only screen and (min-width: 1367px) {
    #hero{
        .content{
            width 1270px
        }
    }
}