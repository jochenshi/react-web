.angel-menu{
  display flex
  .angel-menu-item{
    padding 0 20px
    a{
      &:hover{
        color #0058ff
      }
    }
  }
  .angel-submenu-title{
    padding 0 20px
  }
  &.angel-menu-horizontal{
    line-height 64px
    .angel-menu{
      flex-direction column
    }
  }
  &.angel-menu-vertical{
    flex-direction column
    .angel-menu{
      flex-direction column
    }
    .angel-menu-item{
      line-height 46px
    }
    .angel-submenu-title{
      line-height 46px
    }
  }
}
